@{
    ViewData["Title"] = "Главная страница";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - АВТОСЕРВИС</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }
        
        .fullscreen-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            z-index: -1;
        }
        
        .dark-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url("images/aurorep.png");
            z-index: 0;
        }
        
        .main-content {
            position: relative;
            z-index: 1;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .center-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: white;
            text-align: center;
            padding: 20px;
        }
        
        h1 {
            font-size: 5rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 5px;
            margin-bottom: 2rem;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.8);
        }
        
        .btn-container {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            width: 100%;
            max-width: 400px;
        }
        
        .main-btn {
            display: block;
            width: 100%;
            padding: 18px 0;
            font-size: 1.2rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: white;
            background-color: rgba(0, 123, 255, 0.7);
            border: none;
            border-radius: 0;
            transition: all 0.3s ease;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }
        
        .main-btn:hover {
            background-color: rgba(0, 86, 179, 0.9);
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.4);
            color: white;
        }
        
        .main-btn i {
            margin-right: 10px;
            font-size: 1.3rem;
        }
        
        .footer {
            background-color: rgba(0, 0, 0, 0.8);
            color: white;
            padding: 30px 0;
            text-align: center;
        }
        
        .footer h3 {
            color: #4dabf7;
            margin-bottom: 20px;
        }
        
        .contact-info {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-bottom: 20px;
        }
        
        .contact-item {
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .contact-icon {
            color: #4dabf7;
        }
        
        @@media (max-width: 768px) {
            h1 {
                font-size: 3rem;
                letter-spacing: 3px;
            }
            
            .main-btn {
                padding: 15px 0;
                font-size: 1rem;
            }
            
            .contact-info {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
</head>
<body>
    <!-- Фоновое изображение на весь экран -->
    <div class="fullscreen-bg"></div>
    <div class="dark-overlay"></div>
    
    <!-- Основное содержимое -->
    <div class="main-content">
        <div class="center-content">
            <h1>АВТОСЕРВИС</h1>
            
            <div class="btn-container">
                <a href="/Clients" class="btn main-btn">
                    <i class="bi bi-people-fill"></i> КЛИЕНТЫ
                </a>
                <a href="/Services" class="btn main-btn">
                    <i class="bi bi-tools"></i> УСЛУГИ
                </a>
                <a href="/Appointments" class="btn main-btn">
                    <i class="bi bi-calendar-check"></i> ЗАПИСИ
                </a>
            </div>
        </div>
        
        <!-- Футер с информацией о компании -->
        <footer class="footer">
            <div class="container">
                <h3>АвтоСервис "Профи"</h3>
                
                <div class="contact-info">
                    <div class="contact-item">
                        <i class="bi bi-geo-alt-fill contact-icon"></i>
                        <span>г. Самара, ул. Самараская, 40</span>
                    </div>
                    
                    <div class="contact-item">
                        <i class="bi bi-telephone-fill contact-icon"></i>
                        <span><a href="tel:+74951234567" style="color: white;">+7 (400) 400-40-40</a></span>
                    </div>
                    
                    <div class="contact-item">
                        <i class="bi bi-envelope-fill contact-icon"></i>
                        <span><a href="mailto:info@autoservice.ru" style="color: white;">profi@autoservice.ru</a></span>
                    </div>
                    
                    <div class="contact-item">
                        <i class="bi bi-clock-fill contact-icon"></i>
                        <span>Пн-Пт: 8:00-20:00, Сб-Вс: 9:00-18:00</span>
                    </div>
                </div>
                
                <p>© 2025 АвтоСервис "Профи". Все права защищены.</p>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>