@model IEnumerable<AutoRepairService.Data.Models.Client>
@{
    ViewData["Title"] = "Список клиентов";
}

<h2>Список клиентов</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Телефон</th>
            <th>Email</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.Id</td>
                <td>@client.FirstName</td>
                <td>@client.LastName</td>
                <td>@client.Phone</td>
                <td>@client.Email</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@client.Id" class="btn btn-warning">Редактировать</a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@client.Id" />
                            <button type="submit" class="btn btn-danger">Удалить</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Добавить клиента</a>